#include <stdio.h> 
int main()
{	
   for(int j=1;j<=4;j++){//j--->行数
                        //空格
                        for(int i=1;i<=(10-j);i++){//i--->控制空格的个数
                                printf(" ");
                        }
                        //*
                        for(int i=1;i<=(2*j-1);i++){//i--->控制*的个数
                               printf("*");
                        }
                        
                       printf("\n");//---->每行的换行
                }
                
                //下面的三角形
                for(int j=1;j<=3;j++){//j--->行数
                        //空格
                        for(int i=1;i<=(j+6);i++){//i--->控制空格的个数
                                printf(" ");
                        }
                        //*
                        for(int i=1;i<=(7-2*j);i++){//i--->控制*的个数
                                printf("*");
                        }
                        
                        printf("\n");//---->每行的换行
                }
                return 0;
}
